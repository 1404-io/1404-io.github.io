---
import { NAV_LINKS, SITE } from '../lib/constants';
---

<footer class="border-t border-border mt-24">
  <div class="max-w-6xl mx-auto px-6 py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-8">

      <!-- Pages -->
      <div>
        <p class="text-xs tracking-wide uppercase text-text-muted mb-5">Pages</p>
        <ul class="space-y-3">
          {NAV_LINKS.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-text-secondary hover:text-text-primary transition-colors duration-200"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Insights -->
      <div>
        <p class="text-xs tracking-wide uppercase text-text-muted mb-5">Insights</p>
        <ul class="space-y-3">
          <li>
            <a
              href="/insights"
              class="text-sm text-text-secondary hover:text-text-primary transition-colors duration-200"
            >
              All Posts
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <p class="text-xs tracking-wide uppercase text-text-muted mb-5">Contact</p>
        <ul class="space-y-3">
          <li>
            <a
              href={`mailto:${SITE.email}`}
              class="text-sm text-text-secondary hover:text-text-primary transition-colors duration-200"
            >
              {SITE.email}
            </a>
          </li>
          <li>
            <a
              href={`tel:${SITE.phone}`}
              class="text-sm text-text-secondary hover:text-text-primary transition-colors duration-200"
            >
              {SITE.phone}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="mt-16 pt-8 border-t border-border-light flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <p class="text-xs text-text-muted">&copy; {new Date().getFullYear()} 1404. Founded by Holden Bryce. Detroit, MI.</p>
      <div class="flex gap-6">
        <a href="/legal/terms" class="text-xs text-text-muted hover:text-text-secondary transition-colors duration-200">Terms</a>
        <a href="/legal/privacy" class="text-xs text-text-muted hover:text-text-secondary transition-colors duration-200">Privacy</a>
        <a href="https://linkedin.com/in/holdenbryce" target="_blank" rel="noopener noreferrer" class="text-xs text-text-muted hover:text-text-secondary transition-colors duration-200">LinkedIn</a>
        <a href="https://github.com/1404-io" target="_blank" rel="noopener noreferrer" class="text-xs text-text-muted hover:text-text-secondary transition-colors duration-200">GitHub</a>
      </div>
    </div>
  </div>
</footer>
