---
interface Props {
  title: string;
  description: string;
  date: string;
  slug: string;
}

const { title, description, date, slug } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<a href={`/insights/${slug}`} class="group block py-8 border-b border-border">
  <time datetime={date} class="text-xs tracking-wide uppercase text-text-muted">
    {formattedDate}
  </time>
  <h3 class="font-display text-xl md:text-2xl text-text-primary mt-2 mb-3 group-hover:text-copper transition-colors duration-200">
    {title}
  </h3>
  <p class="text-text-secondary text-sm leading-relaxed line-clamp-2">
    {description}
  </p>
</a>
